GridLayoutFood:


<GridLayoutFood>:
    # rows
    # cols
    cols: 5
    rows: 5
    Label:
        text:"CHICKEN"
        color: 100, 100, 0, 100
        font_size: "20sp"
        size: self.texture_size
    Label:
        text: root.my_text_1
        color: 100, 100, 0, 100
        font_size: "20sp"
        size: self.texture_size
    IntegerTextInput:
        id: my_text_input_1
        size_hint: None, 1
        width: "100dp"
        text: root.my_text_1
        multiline: False
        on_text_validate: root.on_text_validate('my_text_1', self)
    Button:
        text:"+"
        on_release: root.on_button_click_plus('my_text_1')
        # size_hint: .8, .5
        # pos: "100dp", "200dp"
        color: 100, 100, 0, 100
        font_size: "20sp"
        size: self.texture_size
        background_color: 0.5,0.5,1,1
        # on_press
    Button:
        text:"-"
        on_release: root.on_button_click_minus('my_text_1')
        color: 100, 100, 0, 100
        font_size: "20sp"
        size: self.texture_size
        background_color: 0.5,0.5,1,1
